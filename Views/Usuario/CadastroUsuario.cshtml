@model usuario;

@{
    ViewData["Title"] = "Cadastro";
}

<div class="row">
<h3 class="col">Realize aqui o seu cadastro:</h3>
</div>

<div class="row">
    <div class="col-6">
    <form method="POST"  asp-action="CadastroUsuario">
        <div class="form-group">
            <label>Nome Completo:</label>
            <input asp-for="nome"  class="form-control">
        </div>        

        <div class="form-group"><label>Login:</label>
        <input asp-for="login"  class="form-control">
        </div>

        <div class="form-group"><label>Senha:</label>   
        <input asp-for="senha" class="form-control"> 
        </div>

        <div class="form-group"><label>Data de Nascimento:</label>   
        <input asp-for="dataNascimento" type="date" class="form-control"> 
        </div>

     
        <input type="submit" value="Cadastrar" class="btn w-25 btn-warning">

    </form>
</div>
</div>