@model usuario;

@{
    ViewData["Title"] = "Login";
}

<div class="row">
<p>Faça login para visualizar agendamentos / mensagens<br>
*Acesso exclusivo para Colaboradores.</p>
</div>

<div class="row">
    <div class="col-6">
        <form method="POST"  asp-action="Login">
            <div class="form-group">
                <label>Login:</label>
                <input asp-for="login"  class="form-control">
            </div>

            <div class="form-group">
                <label>Senha:</label>   
                <input asp-for="senha" class="form-control"> 
            </div>

            <input type="submit" value="Entrar" class="btn w-25 btn-info">
            <br>

            <a href="/Usuario/CadastroUsuario">Não tem um login? Cadastre-se.</a>
        </form>

        <p id="pMensagem">@ViewBag.Mensagem</p>
    </div>
</div>